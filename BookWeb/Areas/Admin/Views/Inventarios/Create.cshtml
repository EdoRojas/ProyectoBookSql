@model BookWeb.Models.ViewModels.InventarioVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<h3 class="text-center"> Crear una nueva producto</h3>
<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="row px-2 mx-2 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Inventario.Nombre"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Inventario.Nombre" class="form-control" />
                    <span asp-validation-for="Inventario.Nombre" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Inventario.Nombredescripcion"></label>
                </div>
                <div class="col-8">
                    <textarea asp-for="Inventario.Nombredescripcion" class="form-control"> </textarea>
                    <span asp-validation-for="Inventario.Nombredescripcion" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Inventario.Stock"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Inventario.Stock" class="form-control" />
                    <span asp-validation-for="Inventario.Stock" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Inventario.Precio"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Inventario.Precio" class="form-control" />
                    <span asp-validation-for="Inventario.Precio" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Inventario.Idcategoria"></label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.Inventario.Idcategoria, Model.ListaCategorias,
                     "-Porfavor seleccione una categoría-", new { @class = "form-control" })
                </div>
            </div>


            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Inventario.Urlimagen"></label>
                </div>
                <div class="col-8">
                    <input type="file" name="archivos" id="subidaArchivo" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-8 offset-4">
                    <partial name="_VistaCrearVolver" />
                </div>
            </div>

        </div>
    </div>
</form>


@section Scripts{
    <script src="https://cdn.tiny.cloud/1/qukxrn62f4bz0iv6z7enaelkkzuzugir28y709xit9xm659s/tinymce/5/tinymce.min.js"></script>
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'lists',
            menubar: 'file edit format'
        });
    </script>
}

