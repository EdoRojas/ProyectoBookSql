
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary"> Lista de Inventario</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Crear Nuevo producto</a>
        </div>
    </div>

    <br />
    <br />
    <table id="tblInventarios" class="table table-striped table-bordered" style="width:100%;">
        <thead>
            <tr>
                <th>id</th>
                <th>nombre</th>
                <th>nombredescripcion</th>
                <th>stock</th>
                <th>precio</th>
                <th>idcategoria</th>
                <th>urlimagen</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>
@section Scripts{
    <script src="~/js/inventario.js"></script>
}

