@model BookWeb.Models.ViewModels.EmpleadoVM
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<h3 class="text-center"> Editar categoría</h3>
<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <div class="row px-2 mx-2 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Empleados.Idempleados" />
        <div class="col-8 mt-4">


            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Empleados.Nombre"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Empleados.Nombre" class="form-control" />
                    <span asp-validation-for="Empleados.Nombre" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Empleados.Apa"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Empleados.Apa" class="form-control"> </input>
                    <span asp-validation-for="Empleados.Apa" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Empleados.Ama"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Empleados.Ama" class="form-control" />
                    <span asp-validation-for="Empleados.Ama" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Empleados.Idperfiles"></label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.Empleados.Idperfiles, Model.ListaPerfiles,
                     "-Porfavor seleccione un perfil-", new { @class = "form-control" })
                </div>
            </div>




            <div class="form-group row">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model.Empleados.Idempleados">Actualizar</button>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success form-control">Volver a lista</a>
                        </div>
                    </div>
                </div>
            </div>


        </div>



    </div>
</form>


@section Scripts{

}





